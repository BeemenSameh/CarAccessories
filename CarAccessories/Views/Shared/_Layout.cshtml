    @RenderSection("style", required: false)
</head>
<body class="animsition">

    <!-- Header -->
    <header class="header1">
        <!-- Header desktop -->
        <div class="container-menu-header">
            <div class="topbar">
            </div>
            <div class="wrap_header">
                <!-- Logo -->
                <a href="index.html" class="logo">
                    <img src="~/Content/images/images/50075681_956933374508190_184640463666413568_n.png"  style="width:30% ;height:10%" alt="IMG-LOGO">
                </a>

                <!-- Menu -->
                <div class="wrap_menu">
                    <nav class="menu">
                        <ul class="main_menu">
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a href="/Categories">Categories</a>
                                    <ul class="sub_menu">
                                        <li><a href="Categories/Create">Create</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="/Products">Products</a>
                                    <ul class="sub_menu">
                                        <li><a href="Products/Create">Create</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>
                                    @Html.ActionLink("Home", "Index", "Home")
                                </li>

                                <li>

                                    @Html.ActionLink("Shop", "Index", "Shop")
                                </li>

                                <li>
                                    @Html.ActionLink("Sale", "Index", "Sale")
                                </li>

                                if (Request.IsAuthenticated)
                                {
                                    <li>
                                        @Html.ActionLink("Order", "Index", "Order")
                                    </li>

                                    <li>
                                        @Html.ActionLink("PaidProducts", "Index", "BaughtProducts")
                                    </li>

                                    @*<li>
                                        @Html.ActionLink("Profile", "GetProducts", "VendorProduct")
                                    </li>*@
                                }
                            }
                        </ul>
                    </nav>
                </div>

                <!-- Header Icon -->
                <div class="header-icons">

                        @Html.Partial("_LoginPartial")
                   

                    <span class="linedivide1"></span>

                    @if (Request.IsAuthenticated)
                    {
                        <a href="/Order" class="header-wrapicon2">
                            <img src="~/Content/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Header Mobile -->
        <div class="wrap_header_mobile">
            <!-- Logo moblie -->
            <a href="index.html" class="logo-mobile">
                @Html.Partial("_LoginPartial")
            </a>

            <!-- Button show menu -->
            <div class="btn-show-menu">
                <!-- Header Icon mobile -->
                <div class="header-icons-mobile">
                    @if (Request.IsAuthenticated)
                    {
                        <a href="/Order" class="header-wrapicon2">
                            <img src="~/Content/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                        </a>
                    }
                </div>

                <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </div>
            </div>
        </div>

        <!-- Menu Mobile -->
        <div class="wrap-side-menu">
            <nav class="side-menu">
                <ul class="main-menu">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="item-menu-mobile">
                            <a href="/Categories">Categories</a>
                            <ul class="sub_menu">
                                <li><a href="Categories/Create">Create</a></li>
                            </ul>
                        </li>

                        <li class="item-menu-mobile">
                            <a href="/Products">Products</a>
                            <ul class="sub_menu">
                                <li><a href="Products/Create">Create</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="item-menu-mobile">
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>

                        <li class="item-menu-mobile">

                            @Html.ActionLink("Shope", "Index", "Shop")
                        </li>

                        <li class="item-menu-mobile">
                            @Html.ActionLink("Sale", "Index", "Sale")
                        </li>

                        if (Request.IsAuthenticated)
                        {
                            <li class="item-menu-mobile">
                                @Html.ActionLink("Order", "Index", "Order")
                            </li>

                            <li class="item-menu-mobile">
                                @Html.ActionLink("PaidProducts", "Index", "BaughtProducts")
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </header>
    @RenderBody()
    <!-- Footer -->
    <footer class="bg6 p-t-45 p-b-43 p-l-45 p-r-45">
        <div class="flex-w p-b-90">
            <div class="w-size6 p-t-30 p-l-15 p-r-15 respon3">
                <h4 class="s-text12 p-b-30">
                    GET IN TOUCH
                </h4>

                <div>
                    <p class="s-text7 w-size27">
                        Any questions? Let us know in store at 8th floor, 379 Hudson St, New York, NY 10018 or call us on (+1) 96 716 6879
                    </p>

                    <div class="flex-m p-t-30">
