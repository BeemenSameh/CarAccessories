    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendor/daterangepicker/daterangepicker.css">
