@model CarAccessories.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/css");

<div class="container" style="padding-bottom:50px">
    <br />
    <div class="row">
        <div class="col-md-5 centered">
            <section id="loginForm">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        @Ajax.ActionLink("Customer Register", "RegistAsCustomer", "Account",null,
                               new AjaxOptions()
                               {
                                   UpdateTargetId = "PartialRegister",
                                   InsertionMode = InsertionMode.Replace,
                                   HttpMethod = "Get"
                               }
                               , new {@class="col-md-6"}
                               )
                        @Ajax.ActionLink("Vendor Register", "RegistAsVendor", "Account",null,
                               new AjaxOptions()
                               {
                                   UpdateTargetId = "PartialRegister",
                                   InsertionMode = InsertionMode.Replace,
                                   HttpMethod = "Get"
                               }, new { @class = "col-md-6" }
                               )
                        @*<label class="radio-inline col-md"><input type="radio" name="UserType" value="Customer Register" checked> <b>Customer Register</b></label>
                        <label class="radio-inline col-md"><input type="radio" name="UserType" value="Vendor Register"><b>Vendor Register</b></label>*@
                    </div>

                    <div id="PartialRegister">
                        @Html.Partial("_CustomerRegisterPartialView")
                    </div>
               
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="btn btn-primary fadeIn fourth" />
                        </div>
                    </div>

                }
            </section>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/bootstrap");
   <script>
       $('input[type=radio][name=UserType]').change(function () {
           if (this.value == 'Customer Register') {
              

           }
           else if (this.value == 'Vendor Register') {
               @Html.Partial("_VendorRegisterPartialView");
           }
       });
    </script>

}


