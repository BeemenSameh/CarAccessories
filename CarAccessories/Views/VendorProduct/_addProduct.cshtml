@model CarAccessories.Models.Product

<div class="card" id="add">
    <div class="card-header">
        <h3 class="card-title">ADD Product</h3>
    </div>
</div>
    <form class="form-horizontal" action="\VendorProduct\addProduct" method="post">
        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">Name</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="Image" class="col-sm-2 control-label">Image</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="Image" placeholder="Image">&nbsp;&nbsp;
                <input type="button" class="btn btn-default" value="Browse">
            </div>
        </div>
        <div class="form-group">
            <label for="Quantity" class="col-sm-2 control-label">Quantity</label>

            <div class="col-sm-10">
                <input type="number" class="form-control" id="Quantity" placeholder="Quantity">
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Description</label>

            <div class="col-sm-10">
                <textarea class="form-control" id="Description" placeholder="Description"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="State" class="col-sm-2 control-label">State</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="State" placeholder="State">
            </div>
        </div>

        <div class="form-group">
            <label for="Model" class="col-sm-2 control-label">Model</label>

            <div class="col-sm-10">
                <select>
                    @foreach (var item in ViewBag.Model)
                    {
                        <option value="@item.ID">@item.ModelName</option>
                    }
                </select>
                <input type="text" class="form-control" id="Model" placeholder="Model">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">ADD</button>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                @Ajax.ActionLink("Back", "GetPartialProducts", null,new AjaxOptions { UpdateTargetId="add",InsertionMode=InsertionMode.Replace},new { @class="btn btn-default"})
            </div>
        </div>
    </form>
