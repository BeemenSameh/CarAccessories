@model CarAccessories.Models.Vendor

<div class="card-header">
    <h3 class="card-title">Update Profile</h3>
</div>
<div class="tab-pane" id="settings">
    <form class="form-horizontal">
        @Html.HiddenFor(m => m.ID)
        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">Company Name</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" name="ComponyName" placeholder="Name" value="@Model.ComponyName">
            </div>
        </div>
        <div class="form-group">
            <label for="Location" class="col-sm-2 control-label">Location</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="Location" placeholder="Location" value="@Model.Address">
            </div>
        </div>
        <div class="form-group">
            <label for="Image" class="col-sm-2 control-label">Image</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="Image" placeholder="Image" value="@Model.Photo">
                <button type="button" class="btn btn-default">Browse</button>
            </div>
        </div>

        <div class="form-group">
            <label for="phone" class="col-sm-2 control-label">Phone NO.</label>

            <div class="col-sm-10">
                <input type="number" class="form-control" id="phone" placeholder="phone" value="@Model.PhoneNumber">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Update</button>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                @Ajax.ActionLink("Back", "GetPartialProducts","VendorProduct", null, new AjaxOptions { UpdateTargetId = "add", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-default" })
            </div>
        </div>
    </form>
    </div>